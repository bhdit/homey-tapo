{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "athom/homey-app",
    "plugin:@typescript-eslint/recommended"
  ],
  "root": true,
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "rules": {
        "node/no-missing-import": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}